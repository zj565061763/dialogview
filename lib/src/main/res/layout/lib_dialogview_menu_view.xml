<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lib_dialogview_view_menu_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/lib_dialogview_view_menu_text_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_dialogview_view_menu_height_title"
        android:gravity="center"
        android:visibility="gone"
        tools:text="标题"
        tools:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_dialogview_stroke"
        android:background="@drawable/lib_dialogview_stroke" />

    <ListView
        android:id="@+id/lv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/lib_dialogview_stroke"
        android:dividerHeight="@dimen/lib_dialogview_stroke" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_dialogview_view_menu_margin_top_cancel"
        android:background="@drawable/lib_dialogview_stroke" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/lib_dialogview_view_menu_text_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_dialogview_view_menu_height_cancel"
        android:background="@drawable/lib_dialogview_sel_menu_bg_cancel"
        android:gravity="center" />

</LinearLayout>