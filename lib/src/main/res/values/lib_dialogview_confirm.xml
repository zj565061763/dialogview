<resources>

    <!--          string          -->

    <string name="lib_dialogview_view_confirm_text_title">提示</string>
    <string name="lib_dialogview_view_confirm_text_cancel">取消</string>
    <string name="lib_dialogview_view_confirm_text_confirm">确定</string>

    <!--          color          -->

    <color name="lib_dialogview_view_confirm_background">#FFFFFF</color>
    <color name="lib_dialogview_view_confirm_text_title">#333333</color>
    <color name="lib_dialogview_view_confirm_text_content">#999999</color>
    <color name="lib_dialogview_view_confirm_text_content_sub">#cccccc</color>
    <color name="lib_dialogview_view_confirm_text_cancel">#999999</color>
    <color name="lib_dialogview_view_confirm_text_confirm">#666666</color>

    <!--          dimen          -->

    <!-- 圆角 -->
    <dimen name="lib_dialogview_view_confirm_corner">5dp</dimen>
    <!-- 按钮高度 -->
    <dimen name="lib_dialogview_view_confirm_height_button">40dp</dimen>

    <!-- 标题字体大小 -->
    <dimen name="lib_dialogview_view_confirm_text_title">16sp</dimen>
    <!-- 内容字体大小 -->
    <dimen name="lib_dialogview_view_confirm_text_content">12sp</dimen>
    <dimen name="lib_dialogview_view_confirm_text_content_sub">10sp</dimen>
    <!-- 取消字体大小 -->
    <dimen name="lib_dialogview_view_confirm_text_cancel">13sp</dimen>
    <!-- 确认字体大小 -->
    <dimen name="lib_dialogview_view_confirm_text_confirm">13sp</dimen>

    <!-- 标题顶部间距-->
    <dimen name="lib_dialogview_view_confirm_margin_top_title">15dp</dimen>

    <!-- 内容左边间距 -->
    <dimen name="lib_dialogview_view_confirm_margin_left_content">15dp</dimen>
    <!-- 内容顶部间距 -->
    <dimen name="lib_dialogview_view_confirm_margin_top_content">15dp</dimen>
    <!-- 内容右边间距 -->
    <dimen name="lib_dialogview_view_confirm_margin_right_content">15dp</dimen>
    <!-- 内容底部间距 -->
    <dimen name="lib_dialogview_view_confirm_margin_bottom_content">15dp</dimen>

    <!--          style          -->

    <style name="lib_dialogview_view_confirm_text_title">
        <item name="android:text">@string/lib_dialogview_view_confirm_text_title</item>
        <item name="android:textColor">@color/lib_dialogview_view_confirm_text_title</item>
        <item name="android:textSize">@dimen/lib_dialogview_view_confirm_text_title</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="lib_dialogview_view_confirm_text_content">
        <item name="android:textColor">@color/lib_dialogview_view_confirm_text_content</item>
        <item name="android:textSize">@dimen/lib_dialogview_view_confirm_text_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="lib_dialogview_view_confirm_text_content_sub">
        <item name="android:textColor">@color/lib_dialogview_view_confirm_text_content_sub</item>
        <item name="android:textSize">@dimen/lib_dialogview_view_confirm_text_content_sub</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="lib_dialogview_view_confirm_text_cancel">
        <item name="android:text">@string/lib_dialogview_view_confirm_text_cancel</item>
        <item name="android:textColor">@color/lib_dialogview_view_confirm_text_cancel</item>
        <item name="android:textSize">@dimen/lib_dialogview_view_confirm_text_cancel</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lib_dialogview_view_confirm_text_confirm">
        <item name="android:text">@string/lib_dialogview_view_confirm_text_confirm</item>
        <item name="android:textColor">@color/lib_dialogview_view_confirm_text_confirm</item>
        <item name="android:textSize">@dimen/lib_dialogview_view_confirm_text_confirm</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
